<?xml version="1.0" encoding="UTF-8"?>
<!-- Configuration：根节点，status="WARN" 表示仅打印Log4j自身的WARN及以上日志（避免干扰） -->
<Configuration status="WARN">
    <!-- 1. Appenders：定义日志输出目标（控制台 + 简单文件） -->
    <Appenders>
        <!-- 控制台输出：最基础的输出目标，新手必配 -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <!-- 日志格式：时间 | 日志级别 | 类名 | 日志内容（换行） -->
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss} | %-5level | %c{1} | %msg%n"/>
        </Console>

        <!-- 简单文件输出（可选）：日志写入项目根目录的 logs/app.log 文件，无复杂滚动策略 -->
        <File name="FileAppender" fileName="logs/app.log" charset="UTF-8">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} | %-5level | %c{1} | %msg%n"/>
        </File>
    </Appenders>

    <!-- 2. Loggers：定义日志记录规则（根Logger，全局生效） -->
    <Loggers>
        <!-- 根Logger：级别设为INFO（只输出INFO/WARN/ERROR/FATAL级日志，过滤DEBUG/TRACE） -->
        <Root level="INFO">
            <!-- 关联上面定义的输出目标：控制台 + 文件 -->
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>